/* components/nav-search.wxss */

.search-container {
  background-color: #F6F6F6;
  padding: 18rpx 38rpx;
}
.search-bar {
  height: 60rpx;
  overflow: hidden;
  background-color: #EAEAEA;
  border: 2rpx solid #CCC;
  border-radius: 6rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.search-icon {
  float: left;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.search-input {
  width: 570rpx;
  float: right;
  height: 50rpx;
  margin-top: 5rpx;
  font-size: 26rpx;
}