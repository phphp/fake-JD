/* pages/item/item.wxss */

.footer-container {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #FFF;
  border-top: 1rpx solid #EFEFEF;
  overflow: hidden;
  font-size: 27rpx;
}
.footer-left, .footer-right {
  width: 50%;
  float: left;
  overflow: hidden
}
.footer-icon {
  float: left;
  width: 50%;
  line-height: 100rpx;
  text-align: center;
}
.add-to-cart {
  background-color: #ff9600;
  border-top-color: #ff9600;
  color: #FFF;
}
.buy {
  background-color: #e4393c;
  border-top-color: #e4393c;
  color: #FFF;
}


.swiper {
  height: 440rpx;
  background-color: #FFF;
}
swiper-item {
  text-align: center;
}
.swiper image {
  width: 440rpx;
  height: 440rpx;
}


page {
  background-color: #E2E1E9;
}
.main {
  width: 100%;
}
.container {
  padding: 0 14rpx;
  margin-bottom: 14rpx;
  padding-bottom: 10rpx;
  background-color: #FFF;
}

.price {
  color: #e4393c;
  font-size: 32rpx;
  font-weight: bolder;
  padding-top: 6rpx;
}
.price text {
  font-size: 24rpx;
}
.title {
  font-size: 30rpx;
  margin: 8rpx 0;
}
.desc {
  color: #999;
}
.line {
  margin: 10rpx 0;
}

.mod-tab {
  display: flex;
  background-color: #FFF;
  font-size: 24rpx;
  border-bottom: 2rpx solid rgba(255,255,255,0.5);
}
.mod-tab view {
  padding: 18rpx 0;
  flex: 1;
  text-align: center
}
.mod-tab view:first-child {
  color: #e4393c;
}

.content image {
  display: flex;
  width: 100%;
}

.filter {
  display: flex;
  line-height: 60rpx;
}
.filter view {
  width: 100%;
}
.filter view:first-child {
  width: 80rpx;
  color: #999;
}
.filter view:last-child {
  width: 80rpx;
  color: #999;
  text-align: center;
}

.select-spec {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 100;
  top: 0;
  /* overflow: hidden; */
  font-size: 24rpx;
}
.select-spec .dark-wrap {
  width: 100%;
  height: calc(100% - 500rpx);
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 101;
}
.filter-content {
  width: calc(100% - 10rpx);
  height: 500rpx;
  background-color: #FFF;
  z-index: 102;
  position: relative;
  padding-left: 10rpx;
}
.filter-sku {
  position: absolute;
  top: 0;
  height: 140rpx;
}
.filter-sku image {
  width: 180rpx;
  height: 180rpx;
  top: -50rpx;
  position: absolute;
  margin-left: 40rpx;
  border-radius: 6rpx;
}
.filter-sku .price,
.filter-sku .title {
  margin-left: 240rpx;
  margin-top: 20rpx;
}
.filter-sku .title {
  font-size: 24rpx;
}
.spec-container {
  overflow: hidden;
}
.spec-value,
.spec-value-selected {
  float: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
  background-color: #F7F7F7;
  padding: 8rpx 18rpx;
  border-radius: 10rpx;
}
.spec-value-selected {
  background-color: #e4393c;
  color: #FFF;
}
.buy-number {
  overflow: hidden;
}
.buy-number input {
  width: 100rpx;
  line-height: 50rpx;
  margin-right: 20rpx;
  background-color: #F7F7F7;
  text-align: center;
  float: right;
}
.buy-number view {
  width: 50rpx;
  line-height: 50rpx;
  margin-right: 20rpx;
  background-color: #F7F7F7;
  text-align: center;
  float: right;
}

.headset {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 10rpx;
  top: 500rpx;
}
.cs-container {
  width: 100%;
  height: 100%;
  z-index: 200;
  position: absolute;
  top: 0;
  font-size: 24rpx;
  overflow: hidden
}
.cs-container .dark-wrap {
  width: calc(100% - 500rpx);
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 201;
  float: left;
}
.dialog-container {
  width: 500rpx;
  height: 100%;
  background-color: #FFF;
  z-index: 202;
  float: left;
}
.dialog {
  width: 460rpx;
  height: calc(100% - 326rpx);
  margin: 20rpx 20rpx;
  background-color: #F2F2F2;
  border: 2rpx solid #E2E2E2;
  overflow: scroll;
}
.input-box {
  width: 440rpx;
  height: 114rpx;
  margin: 0 20rpx 20rpx;
  padding: 10rpx;
  border: 2rpx solid #CCC;
}
.input-box textarea {
  width: 440rpx;
  height: 114rpx;
}
.message-container {
  overflow: hidden;
}
.user-message {
  float: right;
  margin: 0 10rpx;
  padding-bottom:20rpx;
}
.user-name {
  text-align: right;
  color: green;
  /* margin-bottom: 20rpx; */
}
.user-message-box {
  background-color: #CAE7D4;
  border-radius: 20rpx;
  padding: 20rpx;
}
.user-message text {
  /* background-color: #CAE7D4;
  border-radius: 20rpx; */
  /* padding: 20rpx; */
}
.server-message {
  float: left;
  margin: 0 10rpx;
  padding-bottom:20rpx;
}
.server-name {
  color: rgb(35, 82, 124);
  /* margin-bottom: 20rpx; */
}
.server-message-box {
  background-color: #D1F1FE;
  border-radius: 20rpx;
  padding: 20rpx;
}
.split-line {
  overflow: hidden;
  line-height: 50rpx;
}
.split-line view {
  border-top: 2rpx solid rgba(0,0,0,0.08);
  border-bottom: 2rpx solid rgba(255,255,255,0.5);
  float: left;
  width: calc(50% - 60rpx);
  margin: 23rpx 10rpx;
}
.split-line text {
  float: left;
  width: 80rpx;
  text-align: center;
  color: #997;
}
.bubble-container {
  text-align: right;
  height: 20rpx;
}
.bubble {
  width:0;
  height:0;
  margin-left: 20rpx;
  border: 10rpx solid;
  border-color: #F2F2F2 #F2F2F2 #D1F1FE #F2F2F2;
  margin-bottom: 20rpx;
}
.user-message .bubble {
  float: right;
  margin-left: 0;
  margin-right: 20rpx;
  border-color: #F2F2F2 #F2F2F2 #CAE7D4 #F2F2F2;
}